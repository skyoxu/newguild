root = true

[*]
charset = utf-8

# Treat third-party GdUnit4 C# API as external code and
# relax analyzer rules there. We keep project-owned code
# under full quality gates and structural refactor rules.

[Tests.Godot/addons/gdUnit4/**/*.cs]
dotnet_diagnostic.IDE1006.severity = silent
dotnet_diagnostic.IDE0028.severity = silent
dotnet_diagnostic.CA1711.severity = silent
dotnet_diagnostic.CA2213.severity = silent
dotnet_diagnostic.CA1031.severity = suggestion
